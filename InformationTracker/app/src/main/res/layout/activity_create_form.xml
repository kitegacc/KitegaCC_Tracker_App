<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.kitegacc.information_tracker.CreateFormActivity">

    <!-- Create progress -->
    <ProgressBar
        android:id="@+id/create_element_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/create_element_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/create_element_form_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/create_input_layout_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/form_field_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Form Field 1"
                    android:inputType="text"
                    android:visibility="gone"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/create_input_layout_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/form_field_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Form Field 2"
                    android:inputType="text"
                    android:visibility="gone"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/create_input_layout_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/form_field_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Form Field 3"
                    android:inputType="text"
                    android:visibility="gone"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/create_input_layout_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/form_field_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Form Field 4"
                    android:inputType="text"
                    android:visibility="gone"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/create_input_layout_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/form_field_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Form Field 5"
                    android:inputType="text"
                    android:visibility="gone"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/create_input_layout_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/form_field_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Form Field 6"
                    android:inputType="text"
                    android:visibility="gone"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/create_input_layout_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/form_field_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Form Field 7"
                    android:inputType="text"
                    android:visibility="gone"/>

            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/create_form_submit_button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Create"
                android:textStyle="bold"
                android:onClick="submitCreateForm"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
